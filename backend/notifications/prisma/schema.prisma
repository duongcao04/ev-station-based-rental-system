generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NOTIFICATION_DATABASE_URL")
}

// This enum defines the different types of notifications you can have
enum NotificationType {
  NEW_MESSAGE
  NEW_FOLLOWER
  SYSTEM_ALERT
  BOOKING_CONFIRMED
  BOOKING_REMINDER
  PROMOTION // For promotional content
  INFO
}

// The main Notification model
model Notification {
  id String @id @default(uuid())

  title   String?
  message String // The content of the notification (e.g., "Your booking is confirmed")
  isRead  Boolean          @default(false)
  type    NotificationType @default(INFO) // Uses the enum defined above
  url     String? // Optional: A link to navigate to (e.g., /bookings/123)

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // --- Relation ---
  // This notification belongs to one user
  userId String

  @@index([userId]) // Add an index on userId for faster lookups
}

model UserDevice {
  id           String   @id @default(uuid())
  userId       String

  fcmToken     String   @unique
  platform     String   // 'ios' | 'android' | 'web'
  deviceName   String?
  lastActiveAt DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model CronJobSetting {
  id        String   @id @default(uuid())
  jobName   String   @unique // e.g., "PROMOTIONAL_NOTIFICATION"
  cronTime  String   // The cron expression, e.g., "0 8 * * *"
  isEnabled Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}